<% include partials/header.ejs %>
  <h1>Teams Admin Page</h1>
  <h5>(Click a team to edit)</h5>
  <div class="card-body pre-scrollable">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Team Name</th>
          <th>ID</th>
          <th>Player 1</th>
          <th>Player 2</th>
          <th>Player 3</th>
          <th>Player 4</th>
          <th>Player 5</th>
        </tr>
      </thead>
      <tbody id="team-list">
      </tbody>
    </table>
  </div>
  <a href="/admin/teams/create">Create a new team</a>
  <br>
  <a href="/admin">Back</a>
  <div class="modal fade" id="team-modal" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header" id="modal-header-teams">
        </div>
        <div class="modal-body" id="modal-body-teams">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" id="modal-close">Close</button>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="player-modal" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
        </div>
        <div class="modal-body">
          <div class="card-body pre-scrollable">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th></th>
                  <th>Username</th>
                  <th>Skill Level</th>
                  <th>Player Requests</th>
                </tr>
              </thead>
              <tbody id="player-list">
              </tbody>
            </table>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" id="modal-close">Close</button>
        </div>
      </div>
    </div>
  </div>
  <div>
  <script src="../../scripts/teams-edit.js"></script>
  <script src="../../scripts/add-player-form.js"></script>
<% include partials/footer.ejs %>
