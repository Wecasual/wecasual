<% include ../partials/header.ejs %>
<div class="container top-spacer">

  <!-- Intro section -->
  <h1 class = "my-2 text-center">Payment</h1>
  <h2 class="text-center"><span class="mt-2 mr-2"><%= user.steaminfo.displayName %></span>
    <img class="rounded-circle" src= <%= user.steaminfo._json.avatarmedium %> >
  </h2>


  <div class="row justify-content-center">
    <div class="col col-9">
			<h4 class="my-2">What you pay for</h4>
			<ul>
				<li>A team to hangout with and play fun games twice a week.</li>
				<li>Access to play in all Wecasual extra events and tournaments.</li>
				<li>Access to the Wecasual discord.</li>
				<li>REMINDER: Wecasual is for players who are <b>less than 4k MMR </b>.</li>
			</ul>

			<hr>
      <h4 class="">Our payments are secured through Stripe.</h4>
      <form   class="mt-3" action="/signup/charge" method="POST">
        <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key=<%=keyPublishable%>
          data-amount="500"
          data-name="Wecasual"
          data-description="Payment"
          data-image="/images/justRobo_BG.png"
          data-locale="auto"
          data-currency="usd"
          data-zip-code="true">
        </script>
      </form>

    </div>
  </div>

</div>
<% include ../partials/footer.ejs %>
