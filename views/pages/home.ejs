<% include ../partials/header.ejs %>

<div class="container top-spacer homepage-bg">
  <img class = " my-5 img-fluid mx-auto d-block" src="/images/logo.png" alt="Wecasual Logo">
  <div class = "my-3">
    <hr>
      <div class="row my-4">
        <!-- <div class="col-lg-12 col">
          <a class=" mb-3 btn btn-secondary btn-lg btn-block"href="/profile" target="_blank">Confirm your attendance here</a>
          <a class="mb-3 btn btn-secondary btn-lg btn-block" href="/playing-guide" target="_blank">How to join a Wecasual game</a>
          <a  class="mb-3 btn btn-secondary btn-lg btn-block" href="/pick-up-games" target="_blank">Sign up for a pick-up game</a>
        </div> -->
        <div class="col-lg-12 col mt-5 text-center">
          <h3>Join the Discord: <a href="https://discord.gg/3Q2n2Dt" target="_blank"><b>https://discord.gg/3Q2n2Dt</b></a></h3>
        </div>
      </div>
    	<div class = "my-3">
        <h1>Your Profile</h1>
        <hr>
        <img class = "rounded" src='<%= user['Avatar'] %>' alt='Your Avatar Image' />
        <span class="mr-3 align-middle p-5" style="font-size: 2em"><%= user['Steam Name'] %></span>
          <div class="row my-4">
            <div class="col-md-6 col">
              <div class="card">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">
                    <h3><b>Email: </b>
                    <% if(user['Email']){ %>

                    <%= user['Email'] %>

                    <%}else{ %>
                      <i>No email</i>
                    <%}%>
                    </h3>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <iframe class="airtable-embed" src="https://airtable.com/embed/shrHl2TZQzygTgiW6?backgroundColor=purple" frameborder="0" onmousewheel="" width="100%" height="533" style="background: transparent; border: 1px solid #ccc;"></iframe>

          <h1>Game Signup</h1>
          <form id="game-signup" method="post" action="/schedule/gameSignup">
            <div class="form-group ">
              <div class="card-body pre-scrollable">
                <table class="table table-striped">
                  <thead>
                      <tr>
                        <th>Select a Game</th>
                        <th></th>
                      </tr>
                  </thead>
                  <tbody id="game-list">
                  </tbody>
                </table>
              </div>
              <h5>Select a Team</h5>
              <div class="radio">
                <label><input type="radio" name="team" value="Team 1"> Team 1</label>
              </div>
              <div class="radio">
                <label><input type="radio" name="team" value="Team 2"> Team 2</label>
              </div>
              <input type="submit" value="Sign up" class = "btn btn-secondary">
            </div>
          </form>

          <h1>Your Games</h1>
          <div class="card-body pre-scrollable">
            <table class="table table-striped">
              <thead>
                  <tr>
                    <th>Game</th>
                    <th>Your Team</th>
                  </tr>
              </thead>
              <tbody id="my-game-list">
              </tbody>
            </table>
          </div>

        </div>
    </div>
</div>
<script src="../../scripts/gameSignup.js"></script>
<% include ../partials/footer.ejs %>
