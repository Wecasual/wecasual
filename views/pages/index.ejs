<% include ../partials/header.ejs %>

		<div class="logo"> </div>
		<h2>eSports for everyone</h2>
		<h3>Casual Dota 2 Leagues coming soon!</h3>
		<p><a href="/about"> About </a></p>
		<% if (!user) { %>
			<h2>Welcome! Please log in.</h2>
			<p><a href="auth/steam">Sign On with Steam</a></p>
		<% } else { %>
			<h2>Hello, <%= user.displayName %>. - <a href='logout'>Logout</a></h2>
		<% } %>
		<div class="mailing-list">
			<p>Join our mailing list for updates</p>
			<form method="POST" action="/mailingList/add">
				<div id="email-textbox-container">
					<input type="text" name="email" placeholder='Enter email' id="email-textbox">
				</div>
				<input type="submit" value="Submit" class="button">
				<div class=alert>
					<% if(error){ %>
						<div class="alert-red">
						 	<%= error %>
						 	<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
						</div>
					<% }
					else if(message){ %>
						<div class="alert-green">
						  <%= message %>
						  <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
						</div>
					<% } %>
				</div>
			</form>
		</div>
		<script>
			var close = document.getElementsByClassName("closebtn");
			var i;
			for (i = 0; i < close.length; i++) {
			    close[i].onclick = function(){
			        var div = this.parentElement.parentElement;
			        div.style.opacity = "0";
			        setTimeout(function(){ div.style.display = "none"; }, 600);
			    }
			}
		</script>
<% include ../partials/footer.ejs %>
